    <div>
      <div id="oc_platfrombundle_adverttype_categories__name__">
        <div>
          <label for="oc_platformbundle_adverttype_categories__name__nom" class="required">Name</label>
          <input type="text"
                 id="oc_platformbundle_adverttype_categories__name__name"
                 name="oc_platfrombundle_adverttype[categories][__name__][name]"
                 required="required" />
        </div>
      </div>
    </div>

   <p>
   <a href="{{ 'oc_platformbundle_adverttype_categories__name__nom' }}" class="btn btn-danger">
      <i class="glyphicon glyphicon-trash"></i>
      Supprimer
   </a>
   </p>

   <p>
   <a href="{{ 'oc_platformbundle_adverttype_categories__name__nom' }}" class="btn btn-primary">
      <i class="glyphicon glyphicon-trash"></i>
      Valider
   </a>
   </p>
</div>